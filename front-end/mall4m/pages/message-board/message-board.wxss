.container {
  padding: 20px;
}

.form {
  margin-bottom: 20px;
}

textarea {
  width: 100%;
  height: 100px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  margin-top: 10px;
  padding: 10px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 4px;
}

.message-list {
  margin-top: 20px;
}

.message-item {
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

.reply-item {
  margin-left: 20px;
  border-left: 2px solid #007bff;
}

.creator {
  font-weight: bold;
}

.content {
  display: block;
  margin-top: 5px;
}
