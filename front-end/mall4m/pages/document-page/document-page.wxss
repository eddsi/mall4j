/* 页面整体背景和布局设置 */
page {
  background-color: #f7f7f7;
  /* 背景色 */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20px;
  /* 根据需要调整上边距 */
  height: 100vh;
}

/* 标题样式 */
.title {
  color: #333;
  font-size: 16px;
  text-align: center;
  margin-bottom: 20px;
  /* 标题与内容区域的间距 */
}

/* 文件显示区域的容器 */
.file-container {
  background-color: #fff;
  border-radius: 10px;
  /* 圆角 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  /* 添加阴影 */
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 200px;
  padding: 20px;
  margin-bottom: 20px;
  /* 与按钮的间距 */
  margin: 0 auto 20px auto;
}

/* 文件图标和提示文字 */
.file-icon {
  width: 50px;
  /* 图标大小 */
  height: 50px;
  margin-bottom: 10px;
  /* 图标与文字的间距 */
}

.file-icon-and-name {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.file-description {
  font-size: 14px;
  color: #666;
  text-align: center;
  margin-bottom: 20px;
  /* 文字与按钮的间距 */
}

/* 按钮样式 */
.button {
  background-color: #1b7dec;
  color: white;
  border: none;
  border-radius: 50px;
  padding: 2px 2px;
  width: 80%;
  /* 按钮宽度 */
  font-size: 16px;
  /* 文字大小 */
  margin-top: 15px;
  margin-bottom: 20px;
}

/* 文件类型和大小提示 */
.file-type {
  font-size: 12px;
  color: #999;
  text-align: center;
}

/* 输入框样式，确保水平居中 */
.input-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%; /* 确保填满父容器 */
  margin-top: 10px; /* 和上面内容的间距 */
}

.input {
  width: 80%; /* 输入框宽度 */
  padding: 10px;
  margin-bottom: 10px; /* 输入框间的间距 */
  border: 1px solid #ccc; /* 边框样式 */
  border-radius: 5px; /* 轻微的圆角 */
}

.checkbox-label {
  display: flex;
  align-items: center;
}

.checkbox-label text {
  margin-left: 5px;
}
