/* pages/messageBoard/messageBoard.wxss */
.container {
  padding: 16px;
}

.input-container {
  display: flex;
  flex-direction: column;
  margin-bottom: 16px;
}

textarea {
  margin-bottom: 8px;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  padding: 8px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 4px;
}

.messages-container {
  margin-top: 16px;
}

.message {
  padding: 8px;
  border-bottom: 1px solid #eee;
}